{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:recommended",
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "description": "Production deps: minor/patch lockfile updates",
      "matchManagers": [
        "uv"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "automerge": true
    },
    {
      "description": "Majors: widen ranges (all deps)",
      "matchUpdateTypes": [
        "major"
      ],
      "rangeStrategy": "widen",
      "automerge": false,
      "labels": [
        "type:breaking-change"
      ]
    },
    {
      "description": "Dev/test/docs groups",
      "matchManagers": [
        "uv"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "groupName": "dev test docs dependencies",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
