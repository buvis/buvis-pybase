{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:recommended",
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "description": "Production deps: automerge minors/patches (lockfile only)",
      "matchManagers": [
        "uv"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "automerge": true
    },
    {
      "description": "Major updates: manual review (lockfile only, no range widening)\nSee: https://github.com/renovatebot/renovate/discussions/16407",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "type:breaking-change"
      ]
    },
    {
      "description": "Dev/test/docs groups from pyproject.toml",
      "matchManagers": [
        "uv"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "groupName": "dev test docs dependencies",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
