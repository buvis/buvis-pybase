{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:recommended",
  "packageRules": [
    {
      "description": "Major updates: manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "type:breaking-change"
      ]
    },
    {
      "description": "Minor/patch: automerge",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Use lockfile strategy for non-majors",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "description": "Group dev/test/docs from pyproject.toml",
      "matchManagers": [
        "uv"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "groupName": "dev test docs dependencies",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
