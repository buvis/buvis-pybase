{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": "config:recommended",
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "description": "Major updates: manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "type:breaking-change"
      ],
      "rangeStrategy": "widen"
    },
    {
      "description": "Group dev/test/docs from pyproject.toml",
      "matchManagers": [
        "uv"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "groupName": "dev test docs dependencies",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
